<!--
专辑模板
    title: String 专辑名称
    cover: String 专辑图标
    desc:  String 推荐语
    listenNum: String 收听量
    tagName: String 标签名称
    isDescVisible: Boolean 是否显示推荐语
    isTagNameVisible: Boolean 是否显示标题名称
-->
<template name="albumItem" style="display:flex; justify-content: space-between;">
    <view class="weui-flex__item album-item" style="margin-bottom:10px;width:340rpx;" data-index="{{index}}"  data-id="{{id}}" bindtap="handleAlbumTap">
        <image style="width:348rpx; height: 210rpx; border-radius:6rpx;" mode="aspectFill" src="{{cover}}"></image>
        <view class="weui-media-box__title" style="width:340rpx;text-overflow: ellipsis;font-size: 30rpx;">{{title}}</view>

        <block wx:if="{{isDescVisible}}">
            <view class="weui-media-box__desc" style="margin-top:6rpx;font-size:28rpx;width:340rpx;text-overflow:ellipsis; overflow: hidden;">{{desc}}</view>
        </block>
                <image style="width:26rpx;height:26rpx;margin-top:6rpx;margin-right:8rpx;float:left;" src="http://jic.xiaoningmeng.net/www/img/ic_player.png"></image>
        <view class="weui-media-box__desc" style="text-overflow:ellipsis; margin-top:6rpx;font-size: 30rpx;">{{listenNum}}</view>
        <block wx:if="{{isTagNameVisible}}">
            <view>{{tagName}}</view>
        </block>
    </view>
</template>
