/**index.wxss**/
@import "../../loading.wxss";

.page {
     background-color: #f3f4f6;
     height: auto;
}

.play {
     width: 80rpx;
     height: 80rpx;
     position: fixed;
     bottom: 20rpx;
     left: 20rpx;
     z-index: 999;
}

.play image {
     width: 100%;
     height: 100%;
     border-radius: 50%;
     z-index: 999;
}

.bgimg {
     width: 80rpx;
     height: 80rpx;
     position: fixed;
     bottom: 20rpx;
     left: 20rpx;
     border-radius: 50%;
     z-index: 99;}
.slide-image {
     width: 750rpx;
     height: 300rpx;
}

.weui-grid__label {
     font-size: 26rpx;
     color: #494949;
}

.section-title {
     font-size: 24rpx;
     color: #494949;
     margin-bottom: 20rpx;
}

.weui-flex {
     display: flex;
     justify-content: space-between;
     margin: 0;
}

.row-container {
     display: flex;
     justify-content: space-between;
     margin: 0;
}

.weui-media-box__title {
     font-size: 26rpx;
     color: #494949;
}

.tag-item {
     display: flex;
     align-content: center;
     flex-direction: column;
     align-items: center;
}

.weui-media-box__desc {
     color: #9b9b9b;
}
