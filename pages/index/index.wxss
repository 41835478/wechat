/**index.wxss**/
@import "../../loading.wxss";
.loading_box {
  width: 100%; 
  height:100vh;  
  display: flex;
  justify-content: center;
  align-content: center;
  flex-direction: row;
  background: #F3F4F6;
  box-sizing: border-box;
  margin-top: -20rpx;
}
.page {
  background-color: #F3F4F6;
}
.pulse {
  width: 6rpx;
  height: 45rpx;
  background: #5F6770;
  margin: 8rpx;
  border-radius: 20rpx;
  margin-top: 230rpx; 
}
swiper{
     background:#F3F4F6; 
     margin: 0;
     padding: 0;
}
.more{
     margin-top: 220rpx;
}
.play {
     width: 80rpx;
     height: 80rpx;
     position: fixed;
     bottom: 20rpx;
     left: 20rpx;
     z-index: 999;
}

.play image {
     width: 100%;
     height: 100%;
     border-radius: 50%;
     z-index: 999;
}

.bgimg {
     width: 80rpx;
     height: 80rpx;
     position: fixed;
     bottom: 20rpx;
     left: 20rpx;
     border-radius: 50%;
     z-index: 99;}
.slide-image {
     width: 750rpx;
     height: 300rpx;
}  

.weui-grid__label {
     font-size: 26rpx;
     color: #494949;
}

.section-title {
     font-size: 24rpx;
     color: #494949;
     margin-bottom: 20rpx;
}

.weui-flex {
     display: flex;
     justify-content: space-between;
     margin: 0;
}

.row-container {
     display: flex;
     justify-content: space-between;
     margin: 0;
}

.weui-media-box__title {
     font-size: 26rpx;
     color: #494949;
}

.tag-item {
     display: flex;
     align-content: center;
     flex-direction: column;
     align-items: center;
}

.weui-media-box__desc {
     color: #9b9b9b;
}
