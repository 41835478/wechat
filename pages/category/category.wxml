<view class="page flex">

  <view class="page__bd page__bd_spacing" >
    <!--年轮段-->
    <view class="weui-flex">
      <block wx:for="{{data.age_level.items}}" wx:key="data.age_level.items" wx:for-index="idx" wx:for-item="ageLevelItem">
        <view class="weui-flex__item">
          <image style="width: 100%; height: 30px; background-color: #eeeeee;" mode="aspectFit" src="{{ageLevelItem.cover}}"></image>
          <view>{{ageLevelItem.title}}</view>
        </view>
      </block>
    </view>

    <!--标签-->
    <view>
      <block wx:for="{{data.tag.items}}" wx:key="data.tag.items" wx:for-index="idx" wx:for-item="tagItem">
        <view>{{tagItem.name}}</view>
        <view class="weui-flex row-flex" >
          <block wx:for="{{tagItem.child_items}}" wx:key="tagItem.child_items" wx:for-item="tagChildItem">
            <view class="weui-flex__item row-2">
              <image style="width: 80px; height: 80px; background-color: #eeeeee;" mode="aspectFill" src="{{tagChildItem.cover}}"></image>
              <view>{{tagChildItem.name}}</view>
            </view>
          </block>
        </view>
      </block>
    </view>

  </view>
</view>