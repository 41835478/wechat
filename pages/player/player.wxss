/* pages/play/play.wxss */
.page{
   width:100%;
   height:100vh;
   background: #eee 100%; 
} 
.play_image {
     width:440rpx;
     height:440rpx;
     border:8rpx solid #fff; 
     border-radius:50%;
     margin-top:60rpx;
   
     
}
.play_image image{
     width: 100%;
     height:100%;
     border-radius:50%;
}
.page__bd{
     display: flex;
     flex-direction: column;
     align-items: center;
     
}
.process{
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    width:630rpx;
    align-items: center;
    height:auto;
    font-size: 24rpx;
    color:#494949;
}
.process_style{
    width:70%;
    height:8rpx;
    background: #B7B4B4; 
    border-radius: 10rpx;
    position: relative;
}
.process_diot{
position: absolute;
width:25rpx;
height:25rpx;
background: #585858;
border-radius: 50%;
top:-100%;

left:0;
}
.paly_icon{
     display: flex;
     justify-content: space-between;
     align-items: center;
     margin-top: 80rpx;
}

progress{
  width: 100%;
 
}
