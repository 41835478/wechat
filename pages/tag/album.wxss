@import "../../loading.wxss";
.play {
     width: 80rpx;
     height: 80rpx;
     position: fixed;
     bottom: 20rpx;
     left: 20rpx;
     z-index: 999;
}

.play image {
     width: 100%;
     height: 100%;
     border-radius: 50%;
     z-index: 999;
}

.bgimg {
     width: 80rpx;
     height: 80rpx;
     position: fixed;
     bottom: 20rpx;
     left: 20rpx;
     border-radius: 50%;
     z-index: 99;}

.textStyle {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.textContainer {
  margin-top: 200px;
}
.scroll-box {
  width: 750rpx;
  background: #fff;
  height: auto;
  white-space: nowrap; 
  display: flex;
  box-sizing: border-box;
  overflow: scroll;
  padding-bottom: 20rpx;
  padding: 0 15rpx;
} 

 .scroll-box .weui-navbar__item {
  width: auto;
  padding-right: 15rpx;
  padding-left: 15rpx;
  position: relative; 
  display: inline-block;
  height:80rpx;
  
} 

.zan-tab__item--selected .zan-tab__title {
     color: #494949;
     border-bottom: 6rpx solid #FFBE4C;
}

.zan-tab__title {
     font-size: 26rpx;
     display: inline-block;
     color: #9b9b9b;
     height: 80rpx;
     line-height: 80rpx;
     box-sizing: border-box;
     padding: 0 20rpx;
     word-break: keep-all;
     border:  none;
 
}


.zan-tab__bd--scroll {
     display: block;
     white-space: nowrap;
}

.zan-tab__bd--scroll .zan-tab__item {
    margin: 0;
}

.zan-tab__bd--scroll .zan-tab__text {
      margin:0;
}
 
 
 .loading_box {
  width: 100%;
  height:10vh;
  justify-content: center;
  align-content: center;
  flex-direction: row;
  background: #F3F4F6;
 
} 






