.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.page{
     width:100%;
     height:100%;
}
.textStyle {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.textContainer {
  margin-top: 200px;
}
.scroll-box {
  width: 750rpx;
  background: #fff;
  height: auto;
  white-space: nowrap; 
  display: flex;
  box-sizing: border-box;
  overflow: scroll;
  padding-bottom: 20rpx;
  padding: 0 15rpx;
} 

 .scroll-box .weui-navbar__item {
  width: auto;
  padding-right: 15rpx;
  padding-left: 15rpx;
  position: relative; 
  display: inline-block;
  height:80rpx;
  
} 
.weui-navbar__item{
 color:#9B9B9B;
}
.weui-navbar__item.weui-bar__item_on{
   border-bottom:4rpx solid #FFBE4C; 
   color:#494949;
}