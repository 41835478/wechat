.zan-tab {
     height: 90rpx;
}

.zan-tab__bd {
     width: 750rpx;
     display: flex;
     flex-direction: row;
     /* border-bottom: 1rpx solid #e5e5e5; */
     background: #fff;
}

.zan-tab__bd--fixed {
     position: fixed;
     top: 0;
     z-index: 2;
}

.zan-tab__item {
     flex: 1;
     display: inline-block;
     text-align: center;
    
}

.zan-tab__title {
     font-size: 26rpx;
     display: inline-block;
     color: #9b9b9b;
     height: 88rpx;
     line-height: 90rpx;
     box-sizing: border-box;
     padding: 0 20rpx;
   
     margin: 0;
}


.zan-tab__bd--scroll {
     display: block;
     white-space: nowrap;
}



